generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Version {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  version     String  @unique
  name        String
  description String
  multiple    Boolean @default(false)
  books       Book[]
}

